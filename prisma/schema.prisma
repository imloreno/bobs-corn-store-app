generator client {
   provider = "prisma-client-js"
   output   = "./generated/prisma-client"
}

datasource db {
   provider = "postgresql"
   url      = env("DATABASE_URL")
}

model User {
   id       String         @id @default(uuid())
   username String         @unique
   password String
   fullName String
   orders   ProductOrder[]

   @@map("user")
}

model Product {
   id                  String         @id @default(uuid())
   product_name        String
   product_image       String
   product_description String
   additional_details  Json
   product_price       Float
   rate_limit_ms       Int
   productOrders       ProductOrder[]

   @@map("product")
}

model ProductOrder {
   id                  String  @id @default(uuid())
   fk_user_id          String
   user                User    @relation(fields: [fk_user_id], references: [id])
   fk_product_order_id String
   product             Product @relation(fields: [fk_product_order_id], references: [id])
   unit_cost           Float
   total               Float
   confirmed           Boolean @default(false)

   @@map("product_order")
}
